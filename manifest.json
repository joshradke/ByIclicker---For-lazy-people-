{
  "manifest_version": 3,
  "name": "ByeClicker",
  "version": "1.0",
  "description": "Auto-answers iClicker questions",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "https://student.iclicker.com/*",
    "https://api.iclicker.com/*",
    "https://bye-clicker-api.vercel.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://student.iclicker.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
